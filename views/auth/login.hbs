<div class="main" style="margin-top: 200px">
    <div class="cotainer w-100">
        <div class="row justify-content-center">
            <div class="col-md-4 col-sm-8 col-xs-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h6>Login</h6>
                        <a href="/">Home</a>
                    </div>
                    <div class="card-body">
                        {{#if errorMessage}}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                {{errorMessage}}
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        {{/if}}
                        <form action="/auth/login" method="post">
                            <div class="form-group row flex-column">
                                <label for="email_address" class="col col-form-label">Username</label>
                                <div class="col">
                                    <input type="text" id="email_address" class="form-control" name="email" required autofocus>
                                </div>
                            </div>

                            <div class="form-group row flex-column">
                                <label for="password" class="col col-form-label">Password</label>
                                <div class="col">
                                    <input type="password" id="password" class="form-control" name="password" required>
                                </div>
                            </div>

                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    Login
                                </button>
                                <a href="/auth/register" class="btn btn-link">
                                    Register
                                </a>
                            </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>